<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/head"
                android:layout_marginTop="60sp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20sp"
                        android:background="@drawable/boton_video"
                        android:onClick="playVideo"
                        android:tag="familia_jw" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20sp"
                        android:background="@drawable/icono_camara" />

                    <com.bluejamesbond.text.DocumentView
                        android:id="@+id/txt_jw_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/head"
                        android:layout_marginBottom="20sp"
                        android:layout_marginLeft="40sp"
                        android:layout_marginRight="40sp"
                        android:layout_marginTop="20sp">

                    </com.bluejamesbond.text.DocumentView>

                    <!--<TextView
                        android:layout_below="@+id/head"
                        android:textAlignment="center"
                        android:padding="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_jw"/>-->

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20sp"
                        android:background="@drawable/jhonnie" />

                </LinearLayout>

            </ScrollView>

            <include
                android:id="@+id/head"
                layout="@layout/ui_family_walker"></include>

            <include layout="@layout/ui_back_family_desc"></include>

            <include layout="@layout/ui_video" />
        </RelativeLayout>

    </FrameLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#E0EAF1"
        android:choiceMode="singleChoice"
        android:divider="#fff"
        android:dividerHeight="0dp" />
</android.support.v4.widget.DrawerLayout>