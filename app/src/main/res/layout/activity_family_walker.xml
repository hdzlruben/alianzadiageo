<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


        <ScrollView
            android:layout_marginTop="60sp"
            android:layout_below="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_video"
                    android:layout_marginTop="20sp"
                    android:onClick="playVideo"
                    android:id="@+id/btn_video"
                    android:tag="familia_jw"/>
                <ImageButton
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/icono_camara"/>

                <com.bluejamesbond.text.DocumentView
                    android:layout_below="@+id/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                    android:layout_marginBottom="20sp"
                    android:id="@+id/txt_jw_text">

                </com.bluejamesbond.text.DocumentView>

                <!--<TextView
                    android:layout_below="@+id/head"
                    android:textAlignment="center"
                    android:padding="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_jw"/>-->

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:background="@drawable/jhonnie"/>

            </LinearLayout>

        </ScrollView>

    <include
        android:id="@+id/head"
        layout="@layout/ui_family_walker">
    </include>
    <include
        layout="@layout/ui_back_family_desc">
    </include>

    <include layout="@layout/ui_video"/>
</RelativeLayout>