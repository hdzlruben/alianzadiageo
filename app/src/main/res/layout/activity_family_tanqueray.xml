<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


        <ScrollView
            android:layout_marginTop="50sp"
            android:layout_below="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_video"
                    android:onClick="playVideo"
                    android:tag="familia_tr"
                    android:id="@+id/btn_video"
                    android:layout_marginTop="20sp"/>
                <ImageButton
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/icono_camara"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:background="@drawable/imagentanq"/>

            </LinearLayout>

        </ScrollView>

    <include android:id="@+id/head"
        layout="@layout/ui_family_tanqueray"/>

    <include layout="@layout/ui_back_family_desc"/>

    <include layout="@layout/ui_video"/>

</RelativeLayout>