<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:layout_gravity="right">
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <include
                android:id="@+id/tab_menu_diageo"
                layout="@layout/ui_categorias" />
            <include
                android:id="@+id/tab_menu_diageo"
                layout="@layout/ui_back_categorias" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_menu_whisky"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4sp"
                            android:background="@drawable/boton_categoria_whisky"
                            android:padding="10sp"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp" />

                        <Button
                            android:id="@+id/btn_menu_tequila"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4sp"
                            android:background="@drawable/boton_categoria_tequila"
                            android:padding="10sp" />

                        <Button
                            android:id="@+id/btn_menu_ron"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4sp"
                            android:background="@drawable/boton_categoria_ron"
                            android:padding="10sp" />

                        <Button
                            android:id="@+id/btn_menu_vodka"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="4sp"
                            android:background="@drawable/boton_categoria_vodka"
                            android:padding="10sp" />

                        <Button
                            android:id="@+id/btn_menu_gin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4sp"
                            android:background="@drawable/boton_categoria_gin"
                            android:padding="10sp" />

                        <Button
                            android:id="@+id/btn_menu_licor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="4sp"
                            android:background="@drawable/boton_categoria_licor"
                            android:padding="10sp" />

                    </LinearLayout>

                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:choiceMode="singleChoice"
        android:divider="#fff"
        android:dividerHeight="0dp"/>

</android.support.v4.widget.DrawerLayout>