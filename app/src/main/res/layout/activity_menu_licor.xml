<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <include
        layout="@layout/ui_gin" />
    <include
        android:id="@+id/tab_menu_diageo"
        layout="@layout/ui_back_categorias_int" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_baileys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4sp"
                    android:layout_gravity="center"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:tag="categorias_locor_baileys"
                    android:background="@drawable/boton_bayleis"
                    android:padding="10sp" />

                <Button
                    android:id="@+id/btn_baileys_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4sp"
                    android:tag="categorias_locor_baileys_dulce"
                    android:background="@drawable/bayleysduceleche"
                    android:padding="10sp" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>