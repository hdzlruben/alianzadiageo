<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btn_arrow_back"
                            android:layout_marginTop="170sp"
                            android:layout_marginLeft="40sp"
                            android:layout_marginBottom="10sp"
                            android:layout_width="40sp"
                            android:layout_height="30sp"
                            android:onClick="atras"
                            android:background="@drawable/flechaback"

                            />
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/botonbm"
                        android:tag="categorias_bc_master"
                        android:padding="10sp"
                        android:id="@+id/btn_buchanas_master"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp" />

                    <Button
                        android:id="@+id/btn_black_and_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="NO VIDEO"
                        android:layout_gravity="center"
                        android:layout_marginTop="4sp"
                        android:background="@drawable/botonbw"
                        android:padding="10sp" />

                    <Button
                        android:id="@+id/buchanas_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="categorias_bc_12"
                        android:layout_gravity="center"
                        android:layout_marginTop="4sp"
                        android:background="@drawable/botonbuchanans"
                        android:padding="10sp" />


                    <Button
                        android:id="@+id/btn_cardhu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tag=""
                        android:layout_gravity="center"
                        android:layout_marginTop="4sp"
                        android:background="@drawable/botoncardhu"
                        android:padding="10sp" />


                    <Button
                        android:id="@+id/btn_old_parr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="categorias_old_par"
                        android:layout_gravity="center"
                        android:layout_marginTop="4sp"
                        android:background="@drawable/botonoldparr"
                        android:padding="10sp" />



                    <Button
                        android:id="@+id/btn_old_parr_silver"
                        android:layout_width="match_parent"
                        android:tag="categorias_whisky_old_par_silver"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4sp"
                        android:background="@drawable/botonops"
                        android:padding="10sp" />


                    <Button
                        android:id="@+id/btn_jb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="categorias_jb"
                        android:layout_gravity="center"
                        android:layout_marginTop="4sp"
                        android:background="@drawable/botonjb"
                        android:padding="10sp" />


                    <Button
                        android:id="@+id/btn_bulleit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="categorias_bulleit"
                        android:layout_gravity="center"
                        android:layout_marginTop="4sp"
                        android:background="@drawable/bulleit"
                        android:padding="10sp" />


                    <Button
                        android:id="@+id/btn_cr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="NO VIDEO"
                        android:layout_gravity="center"
                        android:layout_marginTop="4sp"
                        android:background="@drawable/botoncr"
                        android:padding="10sp" />

                    <Button
                        android:id="@+id/btn_vat69"
                        android:layout_width="match_parent"
                        android:tag="NO VIDEO"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4sp"
                        android:background="@drawable/botonvat69"
                        android:padding="10sp" />

                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>